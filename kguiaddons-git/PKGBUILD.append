build() {
  cmake -B build -S ${pkgname%-git} \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON \
    -DCMAKE_DISABLE_FIND_PACKAGE_PythonModuleGeneration=ON
  cmake --build build
}

makedepends=(git extra-cmake-modules-git qt5-declarative python-pyqt5 clang doxygen qt5-tools sip)

build() {
  cmake -B build -S ${pkgname%-git} \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON \
    -DCMAKE_DISABLE_FIND_PACKAGE_PythonModuleGeneration=ON
  cmake --build build
}
source=("git+https://github.com/KDE/${pkgname%-git}#branch=kf5")

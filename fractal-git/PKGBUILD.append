
provides=("fractal=${pkgver%%.r*}")
conflicts=("fractal")
unset replaces

unset epoch
pkgver() {
  cd fractal
  local _version=$(git tag --list | grep -E '^[0-9]+\.[0-9]+\.[0-9]+$' | sort -V | tail -1)
  local _revision=$(git rev-list --count $_version..HEAD)
  local _hash=$(git rev-parse --short=7 HEAD)

  printf '%s.r%s.g%s' "$_version" "$_revision" "$_hash"
}

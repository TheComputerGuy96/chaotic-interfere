
# Update source
source=(
  "$_name"::"git+https://invent.kde.org/multimedia/subtitlecomposer.git"
)

# Fix pkgver
pkgver() {
  cd "$srcdir/$_name"
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}


# Disable pocketsphinx, causes build errors
makedepends=(${makedepends[@]/pocketsphinx*})

for key in ${!optdepends[@]} ; do
  if [[ "${optdepends[${key}]}" =~ ^pocketsphinx.*$ ]] ; then
    unset optdepends[${key}]
  fi
done
